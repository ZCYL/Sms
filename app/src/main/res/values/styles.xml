<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeLight" parent="AppBaseThemeLight" />

    <style name="AppBaseThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowBackground">@color/backgroundLight</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="actionBarPopupTheme">@style/PopupThemeLight</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/statusBarLight</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:navigationBarColor">@color/backgroundDark</item>
        <item name="android:statusBarColor">@color/statusBarDark</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="actionBarPopupTheme">@style/PopupThemeDark</item>
        <item name="colorPrimary">@color/backgroundDark</item>
        <item name="colorPrimaryDark">@color/statusBarDark</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="TextPrimary">
        <item name="textColor">primary</item>
        <item name="textSize">primary</item>
    </style>

    <style name="TextSecondary">
        <item name="textColor">tertiary</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="TextTertiary">
        <item name="textColor">tertiary</item>
        <item name="textSize">tertiary</item>
    </style>

    <style name="TextTab">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">12sp</item>
        <item name="android:paddingStart">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="TextButton">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>

        <!-- This needs to be set so that we can tint the toolbar and not change the background
         resource. This is mainly so that QkReplyActivity can call setClipToOutline -->
        <!--<item name="android:background">@android:color/black</item>-->
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="textColor">primary</item>
        <item name="textSize">toolbar</item>
    </style>

    <style name="PreferenceCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textColor">secondary</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="CollapsingToolbarCollapsedText">
        <item name="textSize">toolbar</item>
    </style>

    <style name="CollapsingToolbarExpandedText">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="DrawerRow">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="DrawerText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="textColor">primary</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="PopupThemeBlack" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:textColor">@color/textPrimaryDark</item>
    </style>

    <style name="PopupThemeLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="PopupThemeDark" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/backgroundDark</item>
        <item name="android:textColor">@color/textPrimaryDark</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/separatorLight</item>
    </style>

    <style name="AppThemeLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
